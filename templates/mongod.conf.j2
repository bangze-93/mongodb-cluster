storage:
  dbPath: /data/db
  journal:
    commitIntervalMs: 100

systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log
  logRotate: reopen

net:
  port: 27017
  bindIpAll: true

processManagement:
  timeZoneInfo: /usr/share/zoneinfo

security:
  keyFile: /data/configdb/cluster.key

replication:
  replSetName: {{ mongo_cluster_name }}
